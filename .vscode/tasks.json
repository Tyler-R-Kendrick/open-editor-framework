{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "dev",
      "group": "build",
      "label": "npm: dev",
      "detail": "Start development server",
      "isBackground": true,
      "problemMatcher": {
        "owner": "vite",
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\s*>",
          "endsPattern": "Local:\\s+http://localhost:"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "type": "npm",
      "script": "build",
      "group": "build",
      "label": "npm: build",
      "detail": "Build for production",
      "problemMatcher": [
        "$tsc",
        "$eslint-stylish"
      ]
    },
    {
      "type": "npm",
      "script": "test",
      "group": "test",
      "label": "npm: test",
      "detail": "Run unit tests",
      "problemMatcher": {
        "owner": "vitest",
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+)\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        }
      }
    },
    {
      "type": "npm",
      "script": "test:ui",
      "group": "test",
      "label": "npm: test:ui",
      "detail": "Run tests with UI",
      "isBackground": true,
      "problemMatcher": {
        "owner": "vitest",
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+)\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Vitest UI",
          "endsPattern": "Local:\\s+http://localhost:"
        }
      }
    },
    {
      "type": "npm",
      "script": "preview",
      "group": "build",
      "label": "npm: preview",
      "detail": "Preview production build",
      "isBackground": true,
      "problemMatcher": {
        "owner": "vite",
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\s*>",
          "endsPattern": "Local:\\s+http://localhost:"
        }
      }
    },
    {
      "type": "shell",
      "command": "echo",
      "args": [
        "Opening application in Simple Browser..."
      ],
      "group": "build",
      "label": "Open in Simple Browser",
      "detail": "Open the development server in VS Code Simple Browser",
      "dependsOn": "npm: dev",
      "dependsOrder": "sequence",
      "problemMatcher": [],
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "type": "shell",
      "command": "code",
      "args": [
        "--command",
        "simpleBrowser.show",
        "http://localhost:3000"
      ],
      "group": "build",
      "label": "Open Simple Browser",
      "detail": "Open localhost:3000 in Simple Browser",
      "problemMatcher": [],
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Dev Server + Simple Browser",
      "dependsOn": [
        "npm: dev",
        "Open Simple Browser"
      ],
      "dependsOrder": "sequence",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Start dev server and open in Simple Browser",
      "problemMatcher": []
    },
    {
      "type": "npm",
      "script": "lint",
      "group": "build",
      "label": "npm: lint",
      "detail": "Lint TypeScript and JavaScript files",
      "problemMatcher": [
        "$eslint-stylish"
      ]
    },
    {
      "type": "npm",
      "script": "format",
      "group": "build",
      "label": "npm: format",
      "detail": "Format code with Prettier"
    },
    {
      "type": "npm",
      "script": "type-check",
      "group": "build",
      "label": "npm: type-check",
      "detail": "Check TypeScript types",
      "problemMatcher": [
        "$tsc"
      ]
    },
    {
      "type": "shell",
      "command": "npx",
      "args": [
        "tsc",
        "--noEmit",
        "--watch"
      ],
      "group": "build",
      "label": "TypeScript: Watch",
      "detail": "Watch TypeScript compilation",
      "isBackground": true,
      "problemMatcher": [
        "$tsc-watch"
      ],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    }
  ]
}