{
  "name": "open-editor-framework",
  "version": "1.0.0",
  "description": "A generic HTML5 based React editor as a reusable control with canvas, component pane, and editor control pane",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "serve": "vite preview --port 3000",
    "lint": "eslint --config .eslintrc.cjs . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "build:tokens": "style-dictionary build --config style-dictionary.config.js",
    "storybook": "STORYBOOK_DISABLE_TELEMETRY=1 storybook dev -p 6006 --host 0.0.0.0 --no-open --ci",
    "storybook:safe": "STORYBOOK_DISABLE_TELEMETRY=1 NODE_ENV=production storybook dev -p 6006 --host 0.0.0.0 --no-open --ci --quiet",
    "storybook:debug": "STORYBOOK_DISABLE_TELEMETRY=1 DEBUG=1 storybook dev -p 6006 --host 0.0.0.0 --no-open --loglevel verbose",
    "build-storybook": "storybook build"
  },
  "keywords": [
    "react",
    "editor",
    "canvas",
    "pwa",
    "accessibility",
    "touch",
    "mobile",
    "typescript",
    "tsx"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@adobe/react-spectrum": "^3.42.2",
    "@spectrum-icons/workflow": "^4.2.22",
    "golden-layout": "^2.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.0",
    "@storybook/addon-docs": "^9.0.12",
    "@storybook/react-vite": "^9.0.12",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "9.0.12",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.0",
    "jest-environment-jsdom": "^30.0.0",
    "jsdom": "^23.2.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "storybook": "^9.0.12",
    "style-dictionary": "^5.0.0",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.3.3",
    "vite": "^6.3.5",
    "vite-plugin-pwa": "^1.0.0",
    "workbox-window": "^7.0.0"
  },
  "files": [
    "dist",
    "src"
  ]
}
