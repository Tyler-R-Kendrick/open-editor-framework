{
  "name": "open-editor-framework",
  "version": "1.0.0",
  "description": "A generic HTML5 based React editor as a reusable control with canvas, component pane, and editor control pane",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "serve": "vite preview --port 3000",
    "lint": "eslint . --fix && stylelint \"**/*.css\" --fix",
    "format": "prettier --write .",
    "test": "jest",
    "test:e2e": "playwright test",
    "postinstall": "playwright install",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "build:tokens": "style-dictionary build --config style-dictionary.config.js",
    "storybook": "STORYBOOK_DISABLE_TELEMETRY=1 storybook dev -p 6006 --host 0.0.0.0 --no-open --ci",
    "storybook:safe": "STORYBOOK_DISABLE_TELEMETRY=1 NODE_ENV=production storybook dev -p 6006 --host 0.0.0.0 --no-open --ci --quiet",
    "storybook:debug": "STORYBOOK_DISABLE_TELEMETRY=1 DEBUG=1 storybook dev -p 6006 --host 0.0.0.0 --no-open --loglevel verbose",
    "build-storybook": "storybook build --output-dir dist/storybook",
    "deploy:cloudflare": "wrangler deploy"
  },
  "keywords": [
    "react",
    "editor",
    "canvas",
    "pwa",
    "accessibility",
    "touch",
    "mobile",
    "typescript",
    "tsx"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@adobe/react-spectrum": "^3.42.2",
    "@react-aria/i18n": "^3.12.10",
    "@react-aria/utils": "^3.29.1",
    "@react-aria/dnd": "^3.10.1",
    "@react-spectrum/provider": "^3.10.7",
    "@react-stately/data": "^3.13.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "redux": "^5.0.1",
    "@reduxjs/toolkit": "^2.8.2",
    "react-redux": "^9.2.0",
    "redux-undo": "^1.1.0",
    "lz-string": "^1.5.0",
    "react-router-dom": "^6.23.0",
    "react-draggable": "^4.5.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.0",
    "@storybook/addon-docs": "^9.0.12",
    "@storybook/react-vite": "^9.0.12",
    "@tailwindcss/postcss": "^4.1.10",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "@vitejs/plugin-react": "^4.5.2",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-storybook": "9.0.12",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.1",
    "jest-environment-jsdom": "^30.0.1",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.5.3",
    "storybook": "^9.0.12",
    "style-dictionary": "^5.0.0",
    "tailwindcss": "^4.0.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-pwa": "^1.0.0",
    "workbox-window": "^7.3.0",
    "glob": "^11.0.3",
    "npm": "^11.4.2",
    "@playwright/test": "^1.53.1",
    "stylelint": "^16.21.0",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "wrangler": "^4.20.5"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=11.3.0"
  },
  "files": [
    "dist",
    "src"
  ]
}
